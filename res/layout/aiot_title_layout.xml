<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aiot_title"
    android:paddingTop="@dimen/weather_clock_container_padding_top"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/c_0"
        android:text="@string/aiot_title_text"
        android:textSize="@dimen/aiot_title_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/time_weather_info_margin"
        android:orientation="horizontal">

        <TextClock
            android:id="@+id/time_tc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="hh:mm  "
            android:format24Hour="HH:mm  "
            android:textColor="@color/c_0"
            android:fontFamily="sans-serif-light"
            android:textSize="@dimen/time_weather_info_text" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="15px"
            android:layout_marginBottom="15px"
            android:background="#80FFFFFF"/>

        <TextClock
            android:id="@+id/date_tc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:format12Hour="  yyyy-MM-dd  "
            android:format24Hour="  yyyy-MM-dd  "
            android:gravity="center_vertical"
            android:lineSpacingExtra="5dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/c_0"
            android:textSize="@dimen/time_weather_info_text" />

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="15px"
            android:layout_marginBottom="15px"
            android:background="#80FFFFFF"/>

        <TextView
            android:id="@+id/weather_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_0"
            android:fontFamily="sans-serif-light"
            android:text="  晴 22℃"
            android:textSize="@dimen/time_weather_info_text" />
    </LinearLayout>

</LinearLayout>