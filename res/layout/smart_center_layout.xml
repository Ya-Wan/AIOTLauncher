<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="23dp"
    android:paddingEnd="23dp">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/smart_center_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/smart_center_title" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <include layout="@layout/smart_center_device_status" />


    <LinearLayout
        android:id="@+id/smart_center_container"
        android:layout_width="match_parent"
        android:layout_height="968px"
        android:layout_below="@+id/smart_center_device_status_container"
        android:layout_gravity="center"
        android:background="@color/a70ffffff"
        android:orientation="vertical" />

    <include
        android:id="@+id/hotseat"
        layout="@layout/hotseat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true" />


</RelativeLayout>